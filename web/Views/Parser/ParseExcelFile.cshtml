@model Dto.Parser.ExcelFileDto

@{
    ViewBag.Title = "Upload Excel file to parse";
    ViewBag.Message = "File can be classic xls or xlsx";
}

<h2>@ViewBag.Title.</h2>
<h5>@ViewBag.Message</h5>

<div>
    @using (Html.BeginForm("ParseExcelFile", "Parser", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="file">File</label>
            <input type="file" name="file" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Title">Title</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Title (if blank will use file name)" })
        </div>
        <div class="form-group">
            <label for="Title">Description</label>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Description" })
        </div>
        <input type="submit" class="btn btn-primary" value="Parse" />
    }
</div>